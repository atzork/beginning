<!DOCTYPE html>
<html>
  <head>
    <title>НАЧАЛО!!</title>
    <link type="text/css" rel='stylesheet' href='/libs/bootstrap/dist/css/bootstrap.css' />
    <link type="text/css" rel='stylesheet' href='/assets/css/main.css' />
  </head>
  <body ng-app="oz">
    <div class="page">
      <div class="wrapper">
        <header header-block></header>

        <div class="main-centr-container">
          <h2>Hi <%= firstName%>! Please create a password.</h2>
          <p>Lorem ipsum dolor sit amet, consectetuer adipicing elit, sed diam nonummy.</p>
          <form
            class     = "create-password"
            role      = "form"
            novalidate= "novalidate"
            name      = "authForm"
            method    = "post"
            ng-submit = "submitted=true; createPasswordAction(form,authForm.$valid)"
            ng-controller = "CreatePasswordController"
          >
            <input
              type    = "hidden"
              ng-model= "form.email"
            >
            <div class ="form-group">
              <label>Your Username</label>
              <p class="notice">Your account has been automaticaly created, please login with the following username.</p>
              <p class="email">{{form.email = '<%= email%>'}} </p>
            </div>
            <div class="form-group">
              <label for="password-field" class="required">Enter Your Password</label>
              <p class="notice">Please include 1 number and 1 capital letter.</p>
              <input
                id          = "password-field"
                class       = "form-control"
                type        = "password"
                name        = "password"
                placeholder = "Password"
                autocomplete= "off"
                autofocus   = "on"
                required    = "required"
                ng-maxlength= "69"
                ng-model    = "form.password"
                ng-class="{'invalid':authForm.password.$invalid && (submitted || authForm.password.$touched), 'valid':authForm.password.$valid && (submitted || authForm.password.$touched), 'add-loader':authForm.password.$pending}"
                password-validation
                ng-model-options = "{debounce:{'default':500,'blur': 1}}"
              >
              <div
                class = "error-validation"
                ng-if = "authForm.password.$touched || matchePasswordsErr || submitted"
                ng-messages = "authForm.password.$error"
                ng-messages-include = "/components/shared/error-messages.html"
                ng-messages-multiple
              ></div>
            </div>
            <div class="form-group">
              <label for="re-password-field" class="required">Re-Enter Your Password</label>
              <input
                id          = "re-password-field"
                class       = "form-control"
                type        = "password"
                name        = "repassword"
                placeholder = "Re-Password"
                autocomplete= "off"
                required    = "required"
                ng-maxlength= "69"
                ng-model    = "form.repassword"
                ng-class    = "{'invalid':authForm.repassword.$invalid && (submitted || authForm.repassword.$touched), 'valid':authForm.repassword.$valid && (submitted || authForm.repassword.$touched), 'add-loader':authForm.repassword.$pending}"
                password-validation
                ng-model-options = "{debounce:{'default':500,'blur': 1}}"
              >
              <div
                class       = "error-validation"
                ng-if       = "authForm.repassword.$touched || matchePasswordsErr || submitted"
                ng-messages = "authForm.repassword.$error"
                ng-messages-include = "/components/shared/error-messages.html"
                ng-messages-multiple
              ></div>
            </div>
            <div class="form-group" ng-class="{'add-loader out':authPending}">
              <button class="btn btn-primary" type="submit" ng-class="{'add-loader out':authPending}">Create Your Password</button>
            </div>
          </form>
        </div> <!-- .main-centr-container -->
      </div> <!-- .wrapper -->
    <footer footer-block></footer>
  </div> <!--. page -->

  <script type='text/javascript' src='/libs/angular/angular.min.js'></script>
  <script type='text/javascript' src='/libs/angular-messages/angular-messages.min.js'></script>
  <script type="text/javascript" src="/libs/angular-ui-router/release/angular-ui-router.min.js"></script>
  <script type='text/javascript' src='/libs/angular-ui-bootstrap-bower/ui-bootstrap.min.js'></script>

  <script type="text/javascript" src="/components/app.js"></script>
  <script type="text/javascript" src="/components/createPassword/createPasswordController.js"></script>
  <script type="text/javascript" src="/components/createPassword/createPasswordDirective.js"></script>
  <!--<script type='text/javascript' src='/js/main -- пример.js'></script>-->

  </body>
</html>